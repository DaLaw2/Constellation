{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "constellation-app",
  "version": "0.1.0",
  "identifier": "com.dalaw2.constellation-app",
  "build": {
    "beforeDevCommand": "cd frontend && npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "cd frontend && npm run build",
    "frontendDist": "./frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "constellation-app",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self' data:; connect-src 'self' ipc: tauri:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
